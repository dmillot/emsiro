<% include layouts/header %>

<div class="row p-0 m-0 flex-grow-1 d-flex justify-content-center align-items-center">
    <div class="col-3 p-0 m-0 text-white ">
        <h1><span class="fa fa-sign-in"></span> Signup</h1>

        <!-- LOGIN FORM -->
        <form action="" method="POST" class="was-validated">
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" id="email" name="email" required="required">
            </div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control " id="username" name="username" required="required">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" id="pwd " name="password" required="required">
            </div>

            <button id="signup" type="submit" class="btn btn-custom">Signup</button>
        </form>

        <hr>

        <p>Already have an account? <a class="a-custom" href="/login">Login</a></p>
        <p>Or go <a class="a-custom" href="/">home</a></p>

    </div>
</div>

