<% include layouts/header %>

<div class="row p-0 m-0 flex-grow-1 d-flex justify-content-center align-items-center">
    <div class="col-3 p-0 m-0 text-white ">

        <!-- ERROR MESSAGE -->
        <% if (locals.message) { %>
        <div class="alert alert-<%= locals.type %> alert-dismissible fade show" role="alert">
            <%= locals.message %>
        </div>
        <% } %>

        <h1><span class="fa fa-sign-in"></span> Login</h1>

        <!-- LOGIN FORM -->
        <form action="" method="post" class="was-validated">

            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control " name="username" required="required">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required="required">
            </div>

            <button type="submit" class="btn btn-custom">Login</button>
        </form>

        <hr>

        <p>Need an account? <a class="a-custom" href="register">Signup</a></p>
        <p>Or go <a class="a-custom" href="/">home</a></p>



    </div>
</div>

<% include layouts/footer %>